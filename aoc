#!/bin/zsh

# Usage: ./aoc 5

DAY=$1

./input_dl $DAY
sample=$(head -3 $DAY.in | cut -c 1-50)
outfile="$DAY.py"

cat > $outfile <<EOF
#!/usr/bin/env python3
import sys
from collections import defaultdict
infile = sys.argv[1] if len(sys.argv)>1 else '$DAY.in'
with open(infile, 'r') as f:
    #data = f.read().strip()
    lines = list(map(str.strip, f.readlines()))

'''
$sample
'''

EOF

subl $outfile